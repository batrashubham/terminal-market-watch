{
  "name": "terminal-market-watch",
  "version": "1.0.0",
  "description": "Market Watch for linux/unix terminal",
  "author": "Shubham Batra",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/batrashubham/terminal-market-watch/issues"
  },
  "homepage": "https://github.com/batrashubham/terminal-market-watch#readme",
  "bin": {
    "tmw": "./bin/index.js"
  },
  "main": "bin/index.ts",
  "scripts": {
    "prebuild": "npm run lint && npm run test",
    "test": "jest",
    "test:cov": "jest --coverage",
    "view:coverage": "serve coverage/lcov-report",
    "build": "webpack --config webpack.config.js",
    "lint": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "clean": "rm -rf coverage/* bin/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/batrashubham/terminal-market-watch.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --quiet --fix"
    ]
  },
  "keywords": [
    "stocks",
    "stock",
    "trading",
    "trade",
    "market watch",
    "terminal trading",
    "stock",
    "stock exchange",
    "invest",
    "investment",
    "investing",
    "watch list",
    "exchange",
    "market"
  ],
  "dependencies": {
    "axios": "^0.19.2",
    "chalk": "^4.1.0",
    "inquirer": "^7.3.2",
    "inversify": "^5.0.1",
    "ora": "^4.0.5",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.0",
    "typescript": "^3.9.5",
    "validator": "^13.1.1",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chalk": "^2.2.0",
    "@types/inquirer": "^7.3.0",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/ora": "^3.2.0",
    "@types/sqlite3": "^3.1.6",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
